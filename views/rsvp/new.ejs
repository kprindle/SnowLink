<%- include('../partials/header.ejs')%>
    <div class = "newConnectionContent">
        <h1 class="fourmPosition">Enter Your Information</h1>
        <form action = "/connections/<%= connection.id%>/rsvp" method = 'POST' class="fourmPosition">
            <table>
            <tr>
                    <td><label for="firstName">First Name: </label></td>
                        <td><input type="text" id="firstName" name="firstName" class = "fixed-width"></td>
            </tr>
            <tr>
                    <td><label for="lastName">Last Name: </label></td>
                        <td><input type="lastName" id="lastName" name="lastName" class = "fixed-width"></td>
            </tr>
            <tr>
                    <td><label for="Age">Age: </label></td>
                        <td><input type="number" id="Age", name="Age", class="fixed-width"></td>
            </tr>
            <tr>
                <td><label for="email">email: </label></td>
                    <td><input type="email" id="email", name="email", class="fixed-width"></td>
            </tr>
            <tr>
                <td><label for="phone">Phone: </label></td>
                    <td><input type="phone" id="phone", name="phone", class="fixed-width"></td>
            </tr>
            <td colspan="2" class = "align-right"><button>RSVP</button></td>
            </table>
        </form>
    </div>
<%- include('../partials/footer.ejs')%>